# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Alchemy API Key for blockchain/web3 services
ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Google Cloud Storage bucket name for temporary avatar storage
GCS_BUCKET_NAME="your_gcs_bucket_name"

# Base64 encoded Google Cloud Service Account credentials JSON
GOOGLE_CLOUD_CREDENTIALS="your_base64_encoded_service_account_json"

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT="your_google_cloud_project_id"

# Base URL for the application (optional, defaults to http://localhost:3000)
HOST_DOMAIN="http://localhost:3000"

# Vercel OIDC Token for deployment authentication
VERCEL_OIDC_TOKEN="your_vercel_oidc_token" 